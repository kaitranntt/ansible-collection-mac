# macOS Docker Testing Configuration
# Copy this file to .env and customize as needed

# Container Configuration
MACOS_VERSION=14
DISK_SIZE=64G
RAM_SIZE=8G
CPU_CORES=4

# Network Ports (change if ports are in use)
WEB_PORT=8006
VNC_PORT=5900
SSH_PORT=2222

# Test Configuration
TEST_ID=local
INSTALLATION_METHOD=go
TAILSCALE_TEST_AUTHKEY=

# Resource Limits
MAX_CPU_CORES=6
MAX_RAM_SIZE=12G
MAX_DISK_SIZE=128G

# Logging
LOG_LEVEL=info
CAPTURE_SCREENSHOTS=true
CAPTURE_VIDEO=false

# Performance Monitoring
MONITOR_RESOURCES=true
PERFORMANCE_ALERTS=false

# Cleanup
AUTO_CLEANUP=true
CLEANUP_DELAY=300
